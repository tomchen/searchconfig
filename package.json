{
  "name": "get-merge-config",
  "version": "0.1.0",
  "description": "Get and Merge Configurations",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.js",
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "node tools/cleanup cjs && tsc -p config/tsconfig.cjs.json",
    "build:esm": "node tools/cleanup esm && tsc -p config/tsconfig.esm.json",
    "build:types": "node tools/cleanup types && tsc -p config/tsconfig.types.json",
    "clean": "node tools/cleanup",
    "package": "npm run build && npm pack",
    "test": "jest",
    "test:cov": "jest --coverage",
    "addscope": "node tools/packagejson name @tomchen/get-merge-config && prettier --write package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "config",
    "configuration",
    "get",
    "merge",
    "cosmiconfig",
    "rc",
    "settings",
    "cli",
    "typescript"
  ],
  "author": "Tom Chen <tomchen.org@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/tomchen/get-merge-config",
  "repository": {
    "type": "git",
    "url": "git@github.com:tomchen/get-merge-config.git"
  },
  "bugs": {
    "url": "https://github.com/tomchen/get-merge-config/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.15.0",
    "webpack-cli": "^4.3.1",
    "yaml": "^1.10.0"
  },
  "gmc": {
    "option-1": {
      "fruit": "orange"
    },
    "option-2": [
      "yellow"
    ],
    "option-3": 3,
    "option-5": "hello"
  }
}
